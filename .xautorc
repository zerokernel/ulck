{
	"plugin": ["file", "babel"],
	"task": {
		"babel": {
			"": "Xauto:base", 
			"task": [
				["file:read", {"dir": "src", "regular":"^(.*[^\\\\\\/]+)\\.es$"}],
				["babel:transform", {"plugins": ["transform-es2015-modules-commonjs", "transform-async-to-generator"]}],
				["file:write", {"dir": ".", "filename":"$1.js"}]
			]
		}
	},
	"watcher": {
		"file":["file:watch", {"dir":"src"}]
	},
	"watch": {
		"file":["file", "babel"]
	}
}
